package com.onlinebookstore.userservice.model;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class UserTest {

    @Test
    void testUserModel() {
        User user = new User(1L, "John Doe", "john@example.com", "password123");

        assertEquals(1L, user.getId());
        assertEquals("John Doe", user.getName());
        assertEquals("john@example.com", user.getEmail());
        assertEquals("password123", user.getPassword());

        user.setName("Jane Doe");
        assertEquals("Jane Doe", user.getName());

        assertEquals(user, new User(1L, "Jane Doe", "john@example.com", "password123"));
        assertNotEquals(user, new User(2L, "Other", "other@example.com", "pass"));
    }
}
